<Window x:Class="GymApp.ServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление услугами" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="ServiceListBox" HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="780" SelectionChanged="ServiceListBox_SelectionChanged"/>
        <Button Content="Добавить услугу" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="200" Height="50" Click="AddService_Click"/>
        <TextBox x:Name="ServiceNameTextBox" HorizontalAlignment="Left" Margin="100,310,0,0" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="ServicePriceTextBox" HorizontalAlignment="Left" Margin="350,310,0,0" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="ServiceDescriptionTextBox" HorizontalAlignment="Left" Margin="600,310,0,0" VerticalAlignment="Top" Width="200"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="850,310,0,0" VerticalAlignment="Top" Width="100" Click="SaveService_Click"/>
    </Grid>
</Window>
