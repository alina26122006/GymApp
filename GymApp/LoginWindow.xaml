<Window x:Class="GymApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="200" Width="400">
    <Grid>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" Margin="100,50,0,0" VerticalAlignment="Top" Width="200"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="100,100,0,0" VerticalAlignment="Top" Width="200"/>
        <Button Content="Войти" HorizontalAlignment="Left" Margin="150,150,0,0" VerticalAlignment="Top" Width="100" Click="LoginButton_Click"/>
    </Grid>
</Window>
